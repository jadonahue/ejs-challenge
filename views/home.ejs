<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p>
        <%= startingContent %>
    </p>

    <!-- Loops through each post in the posts array -->
    <% posts.forEach(function(post){ %>
        <h1><%= post.title %></h1>

        <!-- Renders the post content up to 100 chars -->
        <p><%= post.content.substring(0,100) + "... " %>

            <!-- Link pointing to the full post  -->
            <a href="/posts/<%= post.title %>">Read More</a>
        </p>
    <% }); %>

<%- include("partials/footer"); -%>